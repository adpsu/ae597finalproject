import pandas as pd
import matplotlib.pyplot as plt

# Example DataFrames, replace with your actual DataFrames
# df1, df2, df3

# Convert 'total_value' from kWh to GWh in each DataFrame
df1['total_value'] = df1['total_value'] / 1_000_000
df2['total_value'] = df2['total_value'] / 1_000_000
df3['total_value'] = df3['total_value'] / 1_000_000

# Combine the 'total_value' columns into a list of arrays for plotting
# Using .values to get numpy arrays from pandas series
data_to_plot = [df1['total_value'].values, df2['total_value'].values, df3['total_value'].values]

# Create a figure and axes
plt.figure(figsize=(10, 6))

# Create the box plot
plt.boxplot(data_to_plot)

# Setting the x-axis labels to correspond to each DataFrame
plt.xticks([1, 2, 3], ['DataFrame 1', 'DataFrame 2', 'DataFrame 3'])

# Setting the y-axis label
plt.ylabel('Total Value (GWh)')

# Adding a title
plt.title('Comparison of Total Values by DataFrame')

# Show the plot
plt.show()
