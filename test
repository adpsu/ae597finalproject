import matplotlib.pyplot as plt
import matplotlib.path as mpath

# Define the rectangle marker
# Specify the vertices of the rectangle (four corners)
rect_vertices = [
    (-0.5, -0.2), # Bottom-left
    (-0.5, 0.2),  # Top-left
    (0.5, 0.2),   # Top-right
    (0.5, -0.2),  # Bottom-right
    (0., 0.),     # Ignored, needed for the 'closepoly' command
]

# Commands to create the path
rect_codes = [
    mpath.Path.MOVETO,  # Move to bottom-left
    mpath.Path.LINETO,  # Line to top-left
    mpath.Path.LINETO,  # Line to top-right
    mpath.Path.LINETO,  # Line to bottom-right
    mpath.Path.CLOSEPOLY, # Close the polygon
]

# Create the Path object
rect_path = mpath.Path(rect_vertices, rect_codes)

# Sample data
x = [1, 2, 3, 4, 5]
y = [2, 3, 5, 7, 11]

# Create the scatter plot with the custom rectangle marker
plt.scatter(x, y, marker=rect_path, s=100, color='b')  # 's' controls the size of the markers

# Optional: Add titles and labels
plt.title('Scatter Plot with Rectangular Markers')
plt.xlabel('X Axis')
plt.ylabel('Y Axis')

# Show the plot
plt.show()
